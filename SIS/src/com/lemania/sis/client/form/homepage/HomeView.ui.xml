<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default' xmlns:gxt="urn:import:com.sencha.gxt.widget.core.client"
	xmlns:container="urn:import:com.sencha.gxt.widget.core.client.container"
	xmlns:form="urn:import:com.sencha.gxt.widget.core.client.form"
	xmlns:button="urn:import:com.sencha.gxt.widget.core.client.button"
	xmlns:c="urn:import:com.sencha.gxt.widget.core.client">

	<g:HTMLPanel width="100%" height="100%">
		<g:VerticalPanel width="100%" horizontalAlignment="ALIGN_CENTER"
			height="600px" ui:field="pnlLogin">
			<g:Label text="eProfil" styleName="pageTitle" width="" />
			<g:Image url="images/Capture.PNG" width="339px" height="336px" />

			<c:FramedPanel headingText="Se connecter" ui:field="panelLogin"
				width="400" bodyStyle="background: none; padding: 10px">
				<g:Grid width="" cellPadding="10" cellSpacing="5">
					<g:row>
						<g:customCell>
							<g:Label text="" horizontalAlignment="ALIGN_LEFT"
								ui:field="lblLoginMessage" styleName="txtAlert" />
						</g:customCell>
						<g:customCell>
							<g:Label />
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label text="Nom d&apos;utilisateur :"
								horizontalAlignment="ALIGN_LEFT" />
						</g:customCell>
						<g:customCell>
							<g:TextBox ui:field="txtUserName" alignment="LEFT"
								width="200px" />
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label text="Mot de passe :" horizontalAlignment="ALIGN_LEFT" />
						</g:customCell>
						<g:customCell>
							<g:PasswordTextBox ui:field="txtPassword"
								alignment="LEFT" width="200px" />
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label />
						</g:customCell>
						<g:customCell>
							<g:Button text="Se connecter" ui:field="cmdLogin"
								styleName="buttonToolbar" />
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label />
						</g:customCell>
						<g:customCell>
							<g:Label />
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label text="OU" horizontalAlignment="ALIGN_LEFT" />
						</g:customCell>
						<g:customCell>
							<g:Label />
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label />
						</g:customCell>
						<g:customCell>

							<button:TextButton text="Se connecter avec votre compte de Google"
								ui:field="cmdGoogleLogin" />

							<!-- <g:Button text="Se connecter avec votre compte de Google" -->
							<!-- ui:field="cmdGoogleLogin" styleName="gridButton"></g:Button> -->

						</g:customCell>
					</g:row>
				</g:Grid>
			</c:FramedPanel>
		</g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder>
