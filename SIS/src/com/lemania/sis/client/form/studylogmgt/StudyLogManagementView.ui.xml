<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default' xmlns:p2="urn:import:com.google.gwt.user.datepicker.client">

	<g:HTMLPanel width="100%">
		<g:VerticalPanel width="100%">
			<g:Label text="Cahier de texte" horizontalAlignment="ALIGN_CENTER" styleName="pageTitle" />
			<g:HorizontalPanel width="100%" styleName="subSection" verticalAlignment="ALIGN_MIDDLE" spacing="2">
				<g:cell width="30%">
					<g:Label></g:Label>
				</g:cell>
				<g:cell>
					<g:HorizontalPanel spacing="3" verticalAlignment="ALIGN_MIDDLE">
						<g:Label text="Date du :"></g:Label>
						<p2:DateBox ui:field="dateFrom" width="100px" />
						<g:Label text=" au :"></g:Label>
						<p2:DateBox ui:field="dateTo" width="100px" />
						<g:Button styleName="buttonToolbar" ui:field="cmdFilter">Filtrer</g:Button>
					</g:HorizontalPanel>
				</g:cell>
				<g:cell width="20%" horizontalAlignment="ALIGN_RIGHT" >
					<g:Button styleName="buttonToolbar" ui:field="cmdAdd">Saisir</g:Button>
				</g:cell>
			</g:HorizontalPanel>
			<g:HorizontalPanel width="100%" spacing="2">
				<g:cell width="25%">
					<g:VerticalPanel width="100%" spacing="2">
						<g:Grid width="100%">
							<g:row>
								<g:customCell>
									<g:Label text="Professeur :" />
								</g:customCell>
								<g:customCell>
									<g:ListBox ui:field="lstProfs" width="200px" />
								</g:customCell>
							</g:row>
							<g:row>
								<g:customCell>
									<g:Label text="Matière :" />
								</g:customCell>
								<g:customCell>
									<g:ListBox ui:field="lstAssignments"  width="200px" />
								</g:customCell>
							</g:row>
							<g:row>
								<g:customCell>
									<g:Label text="Classe :" />
								</g:customCell>
								<g:customCell>
									<g:ListBox ui:field="lstClasses"  width="200px" />
								</g:customCell>
							</g:row>
						</g:Grid>
						<g:HorizontalPanel width="150px">
							<g:Label>Liste d'élèves :</g:Label>
							<g:Label ui:field="lblStudentQty"></g:Label>
						</g:HorizontalPanel>
						<g:ScrollPanel width="300px" height="400px" ui:field="pnlStudents">
							<g:FlexTable ui:field="tblStudents" width="100%" />
						</g:ScrollPanel>
					</g:VerticalPanel>
				</g:cell>
				<g:cell>
					<g:VerticalPanel width="100%">
						<g:ScrollPanel height="400px" ui:field="pnlLogs" width="100%">
							<g:FlexTable ui:field="tblLogs" width="100%"></g:FlexTable>
						</g:ScrollPanel>
						<g:VerticalPanel width="500px" ui:field="pnlAdd">
							<g:Grid width="100%" >
								<g:row>
									<g:customCell>
										<g:Label ui:field="lblEditLogId" visible="true"></g:Label>
									</g:customCell>
									<g:customCell>
										<g:HorizontalPanel width="100%" horizontalAlignment="ALIGN_CENTER" styleName="slTitleLine">
											<g:Label ui:field="lblSubject"></g:Label>
											<g:Label ui:field="lblClass"></g:Label>
										</g:HorizontalPanel>
									</g:customCell>
								</g:row>
								<g:row>
									<g:customCell>
										<g:Label>Date :</g:Label>
									</g:customCell>
									<g:customCell>
										<p2:DateBox ui:field="dateEntry" />
									</g:customCell>
								</g:row>
								<g:row>
									<g:customCell>
										<g:Label>Titre :</g:Label>
									</g:customCell>
									<g:customCell>
										<g:TextBox width="100%" ui:field="txtTitle"></g:TextBox>
									</g:customCell>
								</g:row>
								<g:row>
									<g:customCell>
										<g:Label>Contenu :</g:Label>
									</g:customCell>
									<g:customCell>
										<g:TextArea width="500px" height="350px" ui:field="txtContent"></g:TextArea>
									</g:customCell>
								</g:row>
								<g:row>
									<g:customCell>
										<g:Label>Fichier joint :</g:Label>
									</g:customCell>
									<g:customCell>
										<g:VerticalPanel ui:field="pnlFileUpload"></g:VerticalPanel>
									</g:customCell>
								</g:row>
								<g:row>
									<g:customCell>
										<g:Label height="20px"></g:Label>
									</g:customCell>
									<g:customCell>
										<g:Label></g:Label>
									</g:customCell>
								</g:row>
								<g:row>
									<g:customCell>
										<g:Label></g:Label>
									</g:customCell>
									<g:customCell>
										<g:HorizontalPanel width="100%" horizontalAlignment="ALIGN_CENTER" ui:field="pnlLogEntryButtons">
											<g:Button styleName="darkBlueButton" ui:field="cmdSave">Enregistrer</g:Button>
											<g:Button styleName="redButton" ui:field="cmdClose">Fermer</g:Button>
										</g:HorizontalPanel>
									</g:customCell>
								</g:row>
							</g:Grid>
						</g:VerticalPanel>
					</g:VerticalPanel>
				</g:cell>
			</g:HorizontalPanel>
		</g:VerticalPanel>
	</g:HTMLPanel>

</ui:UiBinder>